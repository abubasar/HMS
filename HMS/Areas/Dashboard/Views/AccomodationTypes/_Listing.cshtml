@model HMS.Areas.Dashboard.ViewModels.AccomodationTypeListingModel
@if (Model != null && Model.AccomodationTypes!=null && Model.AccomodationTypes.Count>0)
{
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Accomodation Type</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var accomodationType in Model.AccomodationTypes)
        { 

            <tr>
                <td>@accomodationType.Name</td>
                <td>@accomodationType.Description</td>
                <td>
                    <button data-href="@Url.Action("Action","AccomodationTypes" ,new {id=accomodationType.Id})" class=" data-btn btn btn-primary" type="button"  data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i>Edit</button>
                    <button data-href="@Url.Action("Delete","AccomodationTypes" ,new {id=accomodationType.Id})" class="data-btn btn-danger" type="button" data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash mr-1"></i>Delete</button>
                </td>
               
            </tr>
        }
         
    </tbody>
</table>
}
else
{
<div class="alert alert-warning" role="alert">
    Sorry!! no Records Exists.
</div>
}
